<% if page[:query_type] && page[:query_type][:type] != :normal    %>
  <div class="alert alert-info">
    <% if page[:query_type][:type] == :doi %>
      Showing DOI matching
      <b>
        <%= page[:query_type][:value] %>
      </b>
    <% elsif page[:query_type][:type] == :short_doi %>
      Resolved short DOI to
      <b>
        <%= page[:query_type][:value] %>
      </b>
    <% elsif page[:query_type][:type] == :issn %>
      Showing results for ISSN matching
      <b>
        <%= page[:query_type][:value] %>
      </b>
    <% elsif page[:query_type][:type] == :orcid %>
      Showing results for ORCID matching
      <b>
        <%= page[:query_type][:value] %>
      </b>
    <% elsif page[:query_type][:type] == :urn %>
      Showing URN matching
      <b>
        <%= page[:query_type][:value] %>
      </b>
    <% elsif page[:query_type][:type] == :name %>
      Showing results for names matching
      <%= page[:query_type][:value].length <= 1 ? "<b>#{page[:query_type][:value][0]}</b>" : page[:query_type][:value][0..-2].map { |name| "<b>#{name}</b>"}.join(", ") + " or " + "<b>#{page[:query_type][:value][-1]}</b>" %>
    <% end %>
  </div>
<% end %>

